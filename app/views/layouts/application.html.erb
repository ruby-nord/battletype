<!DOCTYPE html>
<html>
  <head>
    <title>Battletype</title>
    <%= favicon_link_tag 'favicon.png', type: 'image/png' %>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <div class="wrapper">
      <header>
        <div class="logo">
          <img src="<%= image_path('battletype.svg') %>" alt="BattleType" />
        </div>
        <div class="log" id="log_system">
          <p>Waiting for player to join..</p>
        </div>
        <div class="partners">
          <a href="https://www.rubyrampage.com/" target="_blank"><img src="<%= image_path('ruby_rampage_logo.png') %>" alt="Ruby Rampage" class="rampage"/></a>
        </div>
      </header>
    </div>
    <%= yield %>
  </body>
</html>
