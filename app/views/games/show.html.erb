  <div id="medium_ship_template" class="ship medium_ship">
    <p class="word"></p>
    <div class="ship">
      <%= render "games/ships/svg/medium_ship" %>
    </div>
  </div>
  <div id="large_ship_template" class="ship large_ship">
    <p class="word"></p>
    <div class="ship">
      <%= render "games/ships/svg/large_ship" %>
    </div>
  </div>
</div>
